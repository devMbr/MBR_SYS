@using MBR.Models
@using MBR.Web
@{
    Layout = "~/Views/Shared/_Index_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        选择膜：<select id="Membranes">
                            <option value="0">全部</option>
                        </select>
                    </div>
                </div>
                <table id="tbRecordClean" class="table table-striped table-bordered table-hover dataTable">
                    <thead>
                        <tr>
                            <th colspan="10">
                                清洗记录
                            </th>
                        </tr>
                        <tr>
                            <th rowspan="2">
                                时间
                            </th>
                            <th>
                                清洗类别(在线清洗/离线清洗)
                            </th>
                            <th>
                                药剂种类
                            </th>
                            <th>
                                药剂浓度
                            </th>
                            <th>
                                浸泡时间
                            </th>
                            <th>
                                清洗前透水率
                            </th>
                            <th>
                                清洗后透水率
                            </th>
                            <th>
                                透水率恢复率
                            </th>
                            <th>
                                单次清洗氯接触值
                            </th>
                            <th>
                                累计氯接触值
                            </th>
                        </tr>
                        <tr>
                            <th>
                               
                            </th>
                            <th>

                            </th>
                            <th>
                                ppm
                            </th>
                            <th>
                                h
                            </th>
                            <th>
                                LMH/bar
                            </th>
                            <th>
                                LMH/bar
                            </th>
                            <th>
                                %
                            </th>
                            <th>
                                ppm▪h
                            </th>
                            <th>
                                ppm▪h
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section header{
    <link rel="stylesheet" href="~/plugins/datepicker/datepicker3.css">
}
@section Scripts{
    <script src="~/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/plugins/datepicker/locales/bootstrap-datepicker.zh-CN.js"></script>

    <script type="text/javascript">
        var GetListUrl = '@Url.Action("GetList")';
        var GetMembraneUrl = '@Url.Action("GetMembraneList")';
    </script>
    <script type="text/javascript">
        $(function () {
            var table = $('#tbRecordClean').DataTable({
                "searching": false,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": GetListUrl,
                    "type": "POST",
                    "data": function (d) {
                        //添加膜的参数传给服务器
                        d.MembraneID = $('#Membranes option:selected').val();//膜的ID
                    }
                },
                "columns": [
                    { "data": "CreateDate" },
                    { "data": "CleanType" },
                    { "data": "Kinds" },
                    { "data": "Concentration" },
                    { "data": "SoakPeriod" },
                    { "data": "BeforeClean" },
                    { "data": "AfterClean" },
                    { "data": "RecoveryRate" },
                    { "data": "SingleChlorine" },
                    { "data": "AccumulativeChlorine" }
                ],
                "columnDefs": [{
                    "targets": 0,
                    "data": "opt"
                }]
            
            });

            $.ajax({
                url: GetMembraneUrl,
                type: "post",
                success: function (result) {
                    var option = '';
                    $.each(result.data, function (i, membrane) {
                        option += "<option value=" + membrane.MBRID + ">" + membrane.Title + "</option>";
                    });
                    jQuery("#Membranes").append(option);
                },
                error: function (text) { }
            });
        });

        $("#Membranes").on("change", function () { //点击按钮 触发table重新请求服务器
            $("#tbRecordClean").dataTable().fnDraw(false);
        });
    </script>
}
